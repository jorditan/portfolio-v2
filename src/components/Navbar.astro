---
const direcciones = ['Inicio', 'Proyectos', 'Contacto']
---

<header class="flex justify-center py-5 fixed w-full">
  <nav class="py-4 px-8 flex glass rounded-full transition-all gap-8 items-center">
    <ul class="flex gap-6">
      {
        direcciones.map((direccion)=> {
          return(
            <li class="w-fit">
              <a class="pointer text-[#fafafa] decoration-none cursor-pointer hover:text-[#cfcfcf] transition-all">{direccion}</a>
            </li>
          )
        })
      }
    </ul>
    <a target="_blank"  download="Curriculum vitae" href="/public/curriculum_vitae.pdf" class="rounded-md text-[#fafafa] flex gap-1 p-2 bg-blue-700 hover:bg-blue-600 transition-colors">
