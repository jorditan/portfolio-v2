---
import Footer from "@/common/components/astroComponentes/Footer.astro";
import Navbar from "@/common/components/astroComponentes/Navbar.astro";
import { ClientRouter } from "astro:transitions";
import ThemeCabezaScript from "./theme-cabeza-script.astro";
---

<!doctype html>
<html
	lang="en"
	transition:persist="header"
	class="scroll-smooth focus:scroll-auto"
>
	<head>
		<ThemeCabezaScript />
		<meta charset="UTF-8" />
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Portfolio web de Matías Owen Jordán, product designer y desarrollador frontend"
		/>
		<meta
			name="keywords"
			content="Vue, React, CSS, JavaScript, Astro, Figma, Product Designer, Frontend"
		/>
		<meta name="author" content="Matías Owen Jordán" />
		<meta property="og:title" content="Matías – Diseñador de Producto y Programador" />
		<meta property="og:description" content="Soy Matías, diseñador de producto y programador. Combino UX/UI con código para crear experiencias digitales funcionales." />
		<meta property="og:image" content="https://https://matias-jordan-portfolio.netlify.app/foto-campo" />
		<meta property="og:url" content="https://matias-jordan-portfolio.netlify.app" />
		<meta property="og:type" content="website" />
		<meta name="generator" content={Astro.generator} />
		<link rel="canonical" href={`https://https://matias-jordan-portfolio.netlify.app/${Astro.url.pathname}`} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/palette.svg" />
		<title>Matías Owen Jordán</title>
	</head>
	<body>
		<ClientRouter />
		<Navbar />
		<main>
			<slot />
		</main>
		<Footer />
		<script
			is:inline
			src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"
		></script>

		<script type="application/ld+json">
			{
				"@context": "http://schema.org",
				"@type": "Dataset",
				"name": "Portfolio de Matías Jordán",
				"description": "Product Designer y desarrollador Front-End de 20 años. Apasionado en el desarrollo y diseño de soluciones innovadoras. Estudiante de la tecnicatura en programación en la Universidad Nacional de Hurlingham (UNAHUR)."
			}
		</script>
	</body>
</html>

<style is:global>
	html,
	body {
		font-family: "Parkinsans", sans-serif;
		font-optical-sizing: auto;
		margin: 0;
	}

	main {
		margin: 0;
	}
	:root {
		color-scheme: dark light;
		--text-color: #fafafa;
	}

	.dark body {
		background-image: linear-gradient(
			to right bottom,
			#071e40,
			#16243c,
			#0e2758,
			#16243c,
			#102053
		);
	}

	body {
		background-image: linear-gradient(
			to right bottom,
			#fafafa,
			#f3f4fc,
			#e9f0fe,
			#dcecff,
			#cbe9ff,
			#c2e8ff,
			#b8e6ff,
			#aee5fe,
			#ade5fe,
			#ace4fd,
			#aae4fd,
			#a9e3fc
		);
	}

	body::before {
		content: "";
		position: fixed;
		inset: 0;
		z-index: -1;
		pointer-events: none;
		background-image:
			url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M40 0H0V40' stroke='%23000000' stroke-opacity='0.04'/%3E%3C/svg%3E"),
			radial-gradient(
				circle at 50% 30%,
				rgba(255, 255, 255, 0.08),
				transparent 70%
			);
		background-repeat: repeat, no-repeat;
		background-size:
			40px 40px,
			cover;
		background-blend-mode: overlay;
	}

	html.dark body::before {
		background-image:
			url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M40 0H0V40' stroke='%23ffffff' stroke-opacity='0.04'/%3E%3C/svg%3E"),
			radial-gradient(
				circle at 50% 30%,
				rgba(255, 255, 255, 0.08),
				transparent 70%
			);
		background-blend-mode: lighten;
	}
	::-webkit-scrollbar {
		width: 5px;
	}
	::-webkit-scrollbar-track {
		background: #071e40;
	}

	::-webkit-scrollbar-thumb {
		background-color: #3fb6ea;
		border-radius: 10px;
	}
</style>
