---
import Layout from "@/layouts/Layout.astro";
import '../assets/styles/global.css'

---

<Layout title="Contacto">
  <main>
    <section class="mx-auto pt-24 py-8 max-w-4xl">
      <h2 class="title text-3xl pb-8 font-semibold w-fit text-[#fafafa]">Pongámonos en contacto</h2>      
      
      <form class="max-w-sm mx-auto flex gap-4 flex-col"> 
        <div>
          <label for="email" class="block mb-2 text-sm font-medium gap-4  text-[#fafafa]">Ingresar correo</label>
          <input type="email" id="email" aria-describedby="helper-text-explanation" class="border border-gray-700 bg-gray-800 text-sm rounded-lg focus:ring-blue-500 block w-full p-2.5  placeholder-gray-400 text-[#fafafa] focus:border-blue-500" placeholder="tucorreo@gmail.com">
        </div>
        
        <div> 
          <label for="email" class="block mb-2 text-sm font-medium gap-4 text-[#fafafa]">Número de teléfono</label>
          <input type="tel" id="phone-input" aria-describedby="helper-text-explanation" class="block p-2.5 w-full border rounded-lg border-gray-700 bg-gray-800 text-sm  focus:ring-blue-500  placeholder-gray-400 text-[#fafafa] focus:border-blue-500" pattern="[0-9]{2}-[0-9]{4}-[0-9]{4}" placeholder="11-1234-5678" required />
        </div>
    
        </div>
    
        </div>
    
        <div>
          <label for="email" class="block mb-2 text-sm font-medium  text-[#fafafa]">Ingresar tu mensaje</label>
          <textarea id="message" rows="4" class="block p-2.5 w-full text-smborder border-gray-700 bg-gray-800 text-sm rounded-lg focus:ring-blue-500  placeholder-gray-400 text-[#fafafa] focus:border-blue-500" placeholder="Me gustaría ponerme en contacto para..."></textarea>
        </div>
    
        <button type="submit" class="text-white w-full bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Enviar</button>
    
      </form>
    </section>
  </main>
</Layout>

<style>
  body {
    margin: 0;
  }
</style>

