---
import Layout from "@/layouts/Layout.astro";
import '../assets/styles/global.css'
import MyForm from "@/components/MyForm";
---
<Layout title="Contacto" transition:animate={'fade'}>
  <main class="h-[100vh]">
    <section id="contacto" class="pt-24 sm:mx-auto py-6 mx-4 max-w-[32rem] md:max-w-[42rem] lg:max-w-4xl transition-all">
      <div class="flex justify-left sm:gap-2 sm:items-center flex-col sm:flex-row pb-4">
        <h2 class="title text-2xl md:text-[3xl] font-semibold w-fit text-[#0f172a] dark:text-[#fafafa]">Pong√°monos en contacto</h2> 
        <small class="dark:text-[#cacaca] text-gray-600">* Campos obligatorios </small>
      </div>
      <MyForm client:load/>
    </section>
  </main>
</Layout>


<style>
  body {
    margin: 0;
  }
</style>

