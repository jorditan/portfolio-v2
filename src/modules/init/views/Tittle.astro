<style scoped>
	@import url("https://fonts.googleapis.com/css2?family=Figtree:ital,wght@0,300..900;1,300..900&family=Lora:ital,wght@0,400..700;1,400..700&family=Parkinsans:wght@300..800&family=Righteous&display=swap");

	.puestos {
		overflow: hidden;
	}

	.roles,
	h2 {
		list-style: none;
	}
	.roles {
		position: relative;
		height: 36px;
		animation: slide 5s cubic-bezier(0.2, -0.2, 0.1, 1) infinite;
	}

	h2 {
		position: absolute;
	}
	h2:first-child {
		top: 100%;
	}

	h2:last-child {
		top: 300%;
	}

	@keyframes slide {
		0% {
			transform: translateY(0);
		}
		15%,
		30% {
			transform: translateY(-100%);
		}
		45%,
		60% {
			transform: translateY(-300%);
		}
		100% {
			transform: translateY(-100%);
		}
	}

	.icon {
		color: #fafafa;
	}

	.badge {
		backdrop-filter: blur(5px);
	}
</style>
